{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "MC Config Schema",
    "description": "Auto-generated schema for mc Config",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "name": {
            "description": "The name of the project",
            "type": "string"
        },
        "description": {
            "description": "The description of the project",
            "type": "string"
        },
        "modules": {
            "description": "The modules of the project",
            "type": "array",
            "items": {
                "type": "string"
            },
            "uniqueItems": true
        },
        "id": {
            "description": "The ID of the project",
            "type": "string"
        },
        "resourcePackPath": {
            "description": "The Path to the Resource Pack",
            "type": "string"
        },
        "behaviourPackPath": {
            "description": "The Path to the Behaviour Pack",
            "type": "string"
        },
        "output": {
            "description": "Output target environment",
            "type": "string",
            "enum": [
                "preview",
                "stable"
            ]
        },
        "awaitWriteFinish": {
            "description": "Wait for file write completion before transfer",
            "type": "object",
            "properties": {
                "$schema": {
                    "type": "string"
                },
                "stabilityThreshold": {
                    "type": "number"
                },
                "pollInterval": {
                    "type": "number"
                }
            },
            "required": [
                "stabilityThreshold",
                "pollInterval"
            ],
            "additionalProperties": false
        },
        "remote": {
            "description": "Remote deployment configuration",
            "type": "object",
            "properties": {
                "$schema": {
                    "type": "string"
                },
                "host": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                },
                "privateKey": {
                    "type": "string"
                },
                "targetPathBP": {
                    "type": "string"
                },
                "targetPathRP": {
                    "type": "string"
                },
                "passphrase": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "disabled": {
                    "type": "boolean"
                }
            },
            "required": [
                "host",
                "username",
                "privateKey",
                "targetPathBP",
                "targetPathRP",
                "disabled"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "name",
        "description",
        "modules",
        "id"
    ],
    "additionalProperties": false
}